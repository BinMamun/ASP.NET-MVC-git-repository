
@{
    ViewBag.Title = "Index";
}


<div class="row col-6 ms-2">
    @Ajax.ActionLink("Score", "Score", "Home", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "scoreDiv", OnBegin="begin", OnSuccess="success"}, new { @class = "btn btn-primary col-1 me-1  " })
    @Ajax.ActionLink("Scroe", "CurrentScore","Home", new AjaxOptions { HttpMethod="Post", OnBegin="begin", OnSuccess="success1"}, new { @class = "btn btn-primary col-1" })
    <div class="spinner-grow col-2 ms-2 text-info" role="status" id="spinner" style="display:none">
        <span class="visually-hidden">Score</span>
    </div>
</div>


<div id="scoreDiv" class="mt-3">
    
</div>
@section scripts{
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function begin() { $("#spinner").show() }
        function success() { $("#spinner").hide() }
        function success1(r) {
            console.log(r);
            $("#spinner").hide();
            $("#scoreDiv").html(`<div>Over: ${r.over}</div> <div> Score: ${r.score}</div>`)
        }
    </script>
}

