@model Work_01.Models.Book
@{
    ViewBag.Title = "Edit";
}

<div class="row align-items-center col">
    <div class="col-3"><p class="card-text">Date: @DateTime.Now.ToString("dd/MM/yyyy")</p></div>
    <div class="col-6 d-flex justify-content-center"><h3 class="display-6">Create Book</h3></div>
    <hr />
</div>
<div class="col-11 d-flex justify-content-end mb-2">
    @Html.ActionLink(" ", "Index", "Books", null, new { @title = "Back to list", @class = "btn btn-sm btn-primary bi-arrow-left" })
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=> x.BookId)
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Title, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Genre, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.DropDownListFor(x=> x.Genre, new SelectList(ViewBag.GenreOptions), new { @class="form-select"})
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Genre, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Price, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-1 offset-5">
        <button type="submit" title="Save to database" class="btn btn-primary" style="margin-left: 30px;">Update</button>
    </div>
}

@section styles {

    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
