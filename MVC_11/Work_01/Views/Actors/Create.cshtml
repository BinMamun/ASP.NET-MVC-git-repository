@model Work_01.VIewModels.ActorViewModel
@{
    ViewBag.Title = "Create";
}


<div class="row align-items-center col">
    <div class="col-3"><p class="card-text">Date: @DateTime.Now.ToString("dd/MM/yyyy")</p></div>
    <div class="col-6 d-flex justify-content-center"><h3 class="display-6">Create new Actor</h3></div>
    <hr />
</div>
<div class="col-11 d-flex justify-content-end mb-2">
    @Html.ActionLink(" ", "Index", "Actors", null, new { @title = "Back to list", @class = "btn btn-sm btn-primary bi-arrow-left" })
</div>

@using (Html.BeginForm("Create", "Actors", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-3 text-end">
            @Html.LabelFor(x => x.Name, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-3 text-end">
            @Html.LabelFor(x => x.Gender, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.EnumDropDownListFor(x => x.Gender, "Select Gender", new { @class = "form-select" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-3 text-end">
            @Html.LabelFor(x => x.MovieId, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.DropDownListFor(x => x.MovieId, new SelectList(ViewBag.Movies,"MovieId","Title"), "Select Movie", new { @class = "form-select" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.MovieId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-3 text-end">
            @Html.LabelFor(x => x.Picture, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Picture, new { @class = "form-control", type = "file" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-1 offset-6">
        <button type="submit" title="Save to database" class="btn btn-primary">Save</button>
    </div>
}

@section styles {

    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $("#ReleaseDate").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>

}

