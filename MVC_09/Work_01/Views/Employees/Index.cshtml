@model IEnumerable<Work_01.Models.Employee>
@{
    ViewBag.Title = "Index";
}
<div class="row align-items-center mb-2">
    <div class="col-3">Date: @DateTime.Now.ToString("dd/MM/yyyy")</div>
    <div class="col-6 text-center display-6">Employee List</div>    
    <hr />
</div>
<div class="col-11 text-end mb-2" style="margin-left: 20px;">
    @Html.ActionLink(" ", "Create", "Employees", null, new { @class = "btn btn-sm btn-success bi-plus-lg" })
</div>
<div class="container">
    <table class="table table-sm table-striped table-borderedless table-light">
        <thead class="table-success">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(x => x.Picture)</th>
                <th>@Html.DisplayNameFor(x => x.EmployeeId)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.JoinDate)</th>
                <th>@Html.DisplayNameFor(x => x.Address)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr class="text-center align-middle">
                    <td >
                        <img src="~/Uploads/@e.Picture" class="rounded-2" width="40" height="50"  style="object-fit:contain;" />
                    </td>
                    <td>@Html.DisplayFor(x => e.EmployeeId)</td>
                    <td>@Html.DisplayFor(x => e.Name)</td>
                    <td>@Html.DisplayFor(x => e.JoinDate)</td>
                    <td>@Html.DisplayFor(x => e.Address)</td>
                    <td>
                        @Html.ActionLink(" ", "Edit", "Employees", new { id = e.EmployeeId}, new { @class = "btn btn-sm btn-outline-light bi-pencil text-primary" })
                        @Html.ActionLink(" ", "Delete", "Employees", new { id = e.EmployeeId }, new { @class = "btn btn-sm btn-outline-light bi-trash text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section styles{

    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
}

