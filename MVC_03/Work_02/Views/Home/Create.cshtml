@model Work_02.Models.Book
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <h2>Create</h2>
    <hr />
</div>
<div class="d-flex justify-content-end mb-2">
    @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-primary" })
</div>

@using (Html.BeginForm())
{<div class="offset-2">
        <div class="form-group col-12 row mb-2">
            <div class="col-2"><label class="col-form-label">Name</label></div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="col-auto">
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-12 row mb-2">
            <div class="col-2"><label class="col-form-label">Author</label></div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
            </div>
            <div class="col-auto">
                @Html.ValidationMessageFor(x => x.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-12 row mb-2">
            <div class="col-2">
                <label class="col-form-label">Cover Price</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x => x.CoverPrice, new { @class = "form-control" })
            </div>
            <div class="col-auto">
                @Html.ValidationMessageFor(x => x.CoverPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-12 row mb-2">

            <div class="col-4 offset-3">
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}