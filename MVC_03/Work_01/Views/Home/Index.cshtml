@model IEnumerable<Work_01.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h1>Products</h1>
    </div>
</div>
<div class="d-flex justify-content-end mb-1">
    @Html.ActionLink("Add New", "Create", "Home", new { }, new { @class="btn btn-primary btn-sm" })
</div> 
<div class="col-12">
    <table class="table table-light table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.ProductId</td>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>
</div>