@model MVC_16.Models.Brand
@{
    ViewBag.Title = "Delete";
}

<div class="row container offset-1">
    <div class="d-flex justify-content-center display-6">Delete Brand</div>
    <hr />
    <div class="col-12 d-flex justify-content-end mb-2">
        @Html.ActionLink("Back", "Index", "Brands", null, new { @class = "btn btn-sm btn-success" })
    </div>
    <div class="" id="placeholder"></div>
    @using (Html.BeginForm())
    {

        <div class="row d-flex justify-content-center mb-2">
            <div class="col-3 text-end">
                @Html.LabelFor(x => x.BrandName, new { @class = " col-form-label" })
            </div>
            <div class="col-6">
                @Html.TextBoxFor(x => x.BrandName, new { @class = "form-control", @readonly= true })
            </div>
        </div>
        <div class="row d-flex justify-content-center mb-2">
            <div class="col-3 text-end">
                @Html.LabelFor(x => x.Origin, new { @class = " col-form-label" })
            </div>
            <div class="col-6">
                @Html.TextBoxFor(x => x.Origin, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" title="save" class="btn btn-danger">Delete</button>
        </div>
    }
</div>

