@model IEnumerable<Work_01.Models.Employee>
@{
    ViewBag.Title = "Index";
}
<div class="row align-items-center mb-2">
    <div class="col-3">Date: @DateTime.Now.ToString("dd/MM/yyyy")</div>
    <div class="col-6 text-center display-6">Employee List</div>
    <hr />
</div>
<div class="col-11 text-end mb-2" style="margin-left: 20px;">
    @Html.ActionLink("Add New", "Create", "Employees", null, new { @class = "btn btn-sm btn-success" })
</div>
<div class="container">
    <table class="table table-sm table-striped table-borderedless table-light">
        <thead class="table-success">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(x => x.Id)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.JoinDate)</th>
                <th>@Html.DisplayNameFor(x => x.Salary)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr class="text-center align-middle">
                    <td>@Html.DisplayFor(x => p.Id)</td>
                    <td>@Html.DisplayFor(x => p.Name)</td>
                    <td>@Html.DisplayFor(x => p.JoinDate)</td>
                    <td>@Html.DisplayFor(x => p.Salary)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Employees", new { id = p.Id }, new { @class = "btn btn-sm btn-outline-primary" })
                        @Html.ActionLink("Delete", "Delete", "Employees", new { id = p.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



