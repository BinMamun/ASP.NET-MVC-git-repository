@model Work_01.Models.Employee
@{
    ViewBag.Title = "Create";
}

<div class="row align-items-center col mb-5">
    <div class="col-3"><p class="card-text">Date: @DateTime.Now.ToString("dd/MM/yyyy")</p></div>
    <div class="col-6 d-flex justify-content-center"><h5 class="display-6" style="margin-right: 117px;">Create new Employee</h5></div>
    <div class="col-3" id="message"></div>
    <hr />
</div>
<div class="col-11 d-flex justify-content-end mb-5">
    @Html.ActionLink("Back", "Index", "Employees", null, new { @title = "Back to list", @class = "btn btn-sm btn-success" })
</div>

@using (Ajax.BeginForm("Create", "Employees", new AjaxOptions
{
    HttpMethod="Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId="message",
    OnSuccess = "success"
}))
{

    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Name, new { @class = "col-from-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.JoinDate, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.JoinDate, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.JoinDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row col-8 offset-3 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Salary, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Salary, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Salary, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-1 offset-5">
        <button type="submit" title="Save to database" class="btn btn-success" style="margin-left: 30px;">Save</button>
    </div>
}


@section styles{

    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $("#JoinDate").datepicker({
            format: "yyyy-mm-dd"
        });

        function success() {
            $("#form0").trigger("reset");
        }
    </script>

}
