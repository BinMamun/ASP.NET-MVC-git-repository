@model Work_01.Models.Article
@{
    ViewBag.Title = "Create";
}

<div class="row align-items-center col mb-5">
    <div class="col-3"><p class="card-text">Date: @DateTime.Now.ToString("dd/MM/yyyy")</p></div>
    <div class="col-6 d-flex justify-content-center"><p class="display-6">Create Article</p></div>
    
    <hr />
</div>
<div class="d-flex justify-content-end mb-5">
    @Html.ActionLink(" ", "Index", "Articles", null, new { @title = "Back to list", @class = " btn btn-warning bi bi-arrow-left-square" })
</div>
@using (Html.BeginForm())
{
    <div class="row form-group col offset-2 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.Title, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger col-3" })
    </div>
    <div class="row form-group col offset-2 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.PublishDate, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.PublishDate, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.PublishDate, "", new { @class = "text-danger  col-3" })
    </div>
    <div class="row form-group col offset-2 mb-2">
        <div class="col-2 text-end">
            @Html.LabelFor(x => x.TotalRead, new { @class = "col-form-label" })
        </div>
        <div class="col-4">
            @Html.TextBoxFor(x => x.TotalRead, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(x => x.TotalRead, "", new { @class = "text-danger  col-3" })
    </div>

    <div class="row form-group mb-2">
        <div class="col-6 text-end">
            <button type="reset" title="reset" class="btn btn-secondary">Reset</button>
            <button type="submit" title="Save to database" class="btn btn-warning">Save</button>
        </div>
    </div>
}

@section styles{
    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />
}

@section scripts{
    @Html.Partial("_Validationpartial")
}

