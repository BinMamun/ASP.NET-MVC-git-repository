@model IEnumerable<Work_01.Models.Article>
@{
    ViewBag.Title = "Index";
}

<div class="row align-items-center col">
    <div class="col-3"><p class="card-text">Date: @DateTime.Now.ToString("dd/MM/yyyy")</p></div>
    <div class="col-6 d-flex justify-content-center"><h3 class="display-6">Article List</h3></div>
    <div class="col-3 d-flex justify-content-end"><p class="card-text">Total Articles: @ViewBag.Count</p></div>
    <hr />
</div>
<div class="d-flex justify-content-end mb-2">
    @Html.ActionLink("Add new", "Create", "Articles", null, new { @title = "Add new article", @class = "btn btn-sm btn-warning" })
</div>
<div>
    <table class="table table-striped shadow-sm table-bordered">
        <thead class="table-warning">
            <tr>
                <th class="text-center">@Html.DisplayNameFor(x => x.Id)</th>
                <th class="col-4 text-center">@Html.DisplayNameFor(x => x.Title)</th>
                <th class="text-center">@Html.DisplayNameFor(x => x.PublishDate)</th>
                <th class="col-2 text-center">@Html.DisplayNameFor(x => x.TotalRead)</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(x => article.Id)</td>
                    <td class="text-center">@Html.DisplayFor(x => article.Title)</td>
                    <td class="text-center">@Html.DisplayFor(x => article.PublishDate)</td>
                    <td class="text-end">@Html.DisplayFor(x => article.TotalRead)</td>
                    <td class="text-center">
                        @Html.ActionLink(" ", "Edit", "Articles", new { id = article.Id }, new { @title = "Edit", @class = "btn btn-sm btn-light bi bi-pencil text-primary" })
                        @Html.ActionLink(" ", "Delete", "Articles", new { id = article.Id }, new { @title = "Delete", @class = "btn btn-sm btn-light bi bi-trash text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section styles{
    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
    }